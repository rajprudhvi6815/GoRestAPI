				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"{{un}}\",\r\n    \"gender\": \"male\",\r\n    \"email\": \"{{ml}}\",\r\n    \"status\": \"active\"\r\n}",
