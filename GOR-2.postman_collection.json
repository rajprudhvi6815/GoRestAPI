	"item": [
		{
			"name": "Create User",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var random=Math.random().toString(36).substring(2);\r",
							"\r",
							"var email=\"raj\"+random+\"@yopmail.com\";\r",
							"var username=\"raj\"+random;\r",
							"\r",
							"pm.collectionVariables.set(\"ml\",email);\r",
							"pm.collectionVariables.set(\"un\",username);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"verify status is 201\",()=>{\r",
							"    pm.response.to.have.status(201);\r",
							"})\r",
							"\r",
							"var jsonData=pm.response.json();\r",
							"pm.collectionVariables.set(\"uid\",jsonData.id);\r",
							"\r",
							"pm.test(\"Verify id in the response is same as collection variable\",()=>{\r",
							"    var cuid=pm.response.json();\r",
							"    pm.expect(cuid.id).to.eql(pm.collectionVariables.get(\"uid\"));\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{tokennew}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
